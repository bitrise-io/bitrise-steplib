{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "format_version",
        "generated_at_timestamp",
        "steplib_source",
        "download_locations",
        "assets_download_base_uri",
        "steps"
    ],
    "additionalProperties": false,
    "properties": {
        "format_version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "generated_at_timestamp": {
            "type": "integer"
        },
        "steplib_source": {
            "type": "string",
            "pattern": "^https://github\\.com/bitrise-io/bitrise-steplib\\.git$"
        },
        "download_locations": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "required": [
                    "type",
                    "src"
                ],
                "additionalProperties": false,
                "properties": {
                    "src": {
                        "type": "string",
                        "pattern": "^https://bitrise-steplib-collection\\.s3\\.amazonaws\\.com/step-archives/$|^source/git$"
                    },
                    "type": {
                        "type": "string",
                        "pattern": "^git$|^zip$"
                    }
                }
            }
        },
        "assets_download_base_uri": {
            "type": "string",
            "pattern": "^https://bitrise-steplib-collection.s3.amazonaws.com/steps$"
        },
        "steps": {
            "type": "object",
            "propertyNames": {
                "pattern": "^[a-z0-9-]+$"
            },
            "additionalProperties": {
                "type": "object",
                "required": [
                    "info",
                    "latest_version_number",
                    "versions"
                ],
                "additionalProperties": false,
                "properties": {
                    "info": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "maintainer"
                        ],
                        "properties": {
                            "removal_date": {
                                "type": "string"
                            },
                            "deprecate_notes": {
                                "type": "string"
                            },
                            "asset_urls": {
                                "type": "object",
                                "additionalProperties": false,
                                "maxProperties": 2,
                                "properties": {
                                    "icon.svg": {
                                        "type": "string",
                                        "pattern": "^https://bitrise-steplib-collection\\.s3\\.amazonaws\\.com/steps/.+/assets/icon\\.svg$"
                                    },
                                    "icon.png": {
                                        "type": "string",
                                        "pattern": "^https://bitrise-steplib-collection\\.s3\\.amazonaws\\.com/steps/.+/assets/icon\\.png$"
                                    }
                                }
                            },
                            "maintainer": {
                                "type": "string",
                                "enum": ["bitrise", "community", "verified"]
                            }
                        }
                    },
                    "latest_version_number": {
                        "type": "string",
                        "pattern": "^\\d+\\.\\d+\\.\\d+$"
                    },
                    "versions": {
                        "type": "object",
                        "propertyNames": {
                            "pattern": "^\\d+\\.\\d+\\.\\d+$"
                        },
                        "additionalProperties": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "title",
                                "summary",
                                "website",
                                "source_code_url",
                                "support_url",
                                "published_at",
                                "source"
                            ],
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "minLength": 1
                                },
                                "summary": {
                                    "type": "string",
                                    "minLength": 1
                                },
                                "description": {
                                    "type": "string"
                                },
                                "website": {
                                    "type": "string",
                                    "minLength": 1
                                },
                                "source_code_url": {
                                    "type": "string"
                                },
                                "support_url": {
                                    "type": "string"
                                },
                                "published_at": {
                                    "type": "string",
                                    "format": "date-time"
                                },
                                "source": {
                                    "type": "object",
                                    "required": [
                                        "git",
                                        "commit"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "git": {
                                            "type": "string",
                                            "pattern": "^.+\\.git$"
                                        },
                                        "commit": {
                                            "type": "string",
                                            "pattern": "^[0-9a-f]{5,40}$"
                                        }
                                    }
                                },
                                "asset_urls": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "maxProperties": 2,
                                    "properties": {
                                        "icon.svg": {
                                            "type": "string",
                                            "pattern": "^https://bitrise-steplib-collection\\.s3\\.amazonaws\\.com/steps/.+/assets/icon\\.svg$"
                                        },
                                        "icon.png": {
                                            "type": "string",
                                            "pattern": "^https://bitrise-steplib-collection\\.s3\\.amazonaws\\.com/steps/.+/assets/icon\\.png$"
                                        }
                                    }
                                },
                                "host_os_tags": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "project_type_tags": {
                                    "type": "array",
                                    "uniqueItems": true
                                },
                                "type_tags": {
                                    "type": "array",
                                    "minItems": 1
                                },
                                "dependencies": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "required": [
                                            "manager",
                                            "name"
                                        ],
                                        "properties": {
                                            "manager": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "toolkit": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "bash": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [
                                                "entry_file"
                                            ],
                                            "properties": {
                                                "entry_file": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "go": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [
                                                "package_name"
                                            ],
                                            "properties": {
                                                "package_name": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                },
                                "deps": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "brew": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "properties": {
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "bin_name": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "apt_get": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "properties": {
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "bin_name": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "check_only": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "required": [
                                                    "name"
                                                ],
                                                "properties": {
                                                    "name": {
                                                        "type": "string",
                                                        "pattern": "^xcode$|^gradle$"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "is_requires_admin_user": {
                                    "type": "boolean"
                                },
                                "is_always_run": {
                                    "type": "boolean"
                                },
                                "is_skippable": {
                                    "type": "boolean"
                                },
                                "run_if": {
                                    "type": "string"
                                },
                                "timeout": {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "meta": {
                                    "type": "object"
                                },
                                "inputs": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "required": [
                                            "opts"
                                        ],
                                        "minProperties": 2,
                                        "maxProperties": 2,
                                        "propertyNames": {
                                            "pattern": "^[a-zA-Z_]{1}[a-zA-Z0-9_]*$"
                                        },
                                        "properties": {
                                            "opts": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "properties": {
                                                    "is_expand": {
                                                        "type": "boolean"
                                                    },
                                                    "skip_if_empty": {
                                                        "type": "boolean"
                                                    },
                                                    "title": {
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "description": {
                                                        "type": "string"
                                                    },
                                                    "summary": {
                                                        "type": "string"
                                                    },
                                                    "category": {
                                                        "type": "string"
                                                    },
                                                    "value_options": {
                                                        "type": "array",
                                                        "minProperties": 2,
                                                        "items": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "is_required": {
                                                        "type": "boolean"
                                                    },
                                                    "is_dont_change_value": {
                                                        "type": "boolean"
                                                    },
                                                    "is_template": {
                                                        "type": "boolean"
                                                    },
                                                    "is_sensitive": {
                                                        "type": "boolean"
                                                    },
                                                    "unset": {
                                                        "type": "boolean"
                                                    },
                                                    "meta": {
                                                        "type": "object"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "outputs": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "required": [
                                            "opts"
                                        ],
                                        "minProperties": 2,
                                        "maxProperties": 2,
                                        "propertyNames": {
                                            "pattern": "^[a-zA-Z_]{1}[a-zA-Z0-9_]*$"
                                        },
                                        "properties": {
                                            "opts": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "properties": {
                                                    "is_expand": {
                                                        "type": "boolean"
                                                    },
                                                    "skip_if_empty": {
                                                        "type": "boolean"
                                                    },
                                                    "title": {
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "description": {
                                                        "type": "string"
                                                    },
                                                    "summary": {
                                                        "type": "string"
                                                    },
                                                    "category": {
                                                        "type": "string"
                                                    },
                                                    "value_options": {
                                                        "type": "array",
                                                        "minProperties": 2,
                                                        "items": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "is_required": {
                                                        "type": "boolean"
                                                    },
                                                    "is_dont_change_value": {
                                                        "type": "boolean"
                                                    },
                                                    "is_template": {
                                                        "type": "boolean"
                                                    },
                                                    "is_sensitive": {
                                                        "type": "boolean"
                                                    },
                                                    "unset": {
                                                        "type": "boolean"
                                                    },
                                                    "meta": {
                                                        "type": "object"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}